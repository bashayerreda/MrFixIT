<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bcmodified"
   android:paddingBottom="12dp"
    tools:context=".Client.EditPage.EditActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/white"
            android:gravity="center"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.111"
            android:layout_marginHorizontal="12dp"
            android:elevation="12dp"
            android:outlineAmbientShadowColor="@color/white"
            app:cardElevation="4dp"
            app:contentPadding="4dp"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_name_Edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/coolveticacompressedrg"
                    android:text="@string/editusername"
                    android:textColor="@color/darkPurple"
                    android:textSize="35sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Title"
                    android:fontFamily="@font/coolveticacompressedrg"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/jobt_title_Edit"
                    android:textColor="@color/darkPurple"
                    android:textSize="35sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/coolveticacompressedrg"
                    android:text="@string/typeOrder"
                    android:textColor="@color/darkPurple"
                    android:textSize="35sp" />

                <RadioGroup
                    android:id="@+id/radio_gp_edit_order"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:id="@+id/radio_edit_long_work"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="4dp"
                        android:buttonTint="@color/black"
                        android:checked="true"
                        android:text="@string/maintanance" />


                    <RadioButton
                        android:id="@+id/radio_edit_short_work"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="4dp"
                        android:buttonTint="@color/black"
                        android:text="@string/hard_work" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/coolveticacompressedrg"
                        android:text="@string/more_details"
                        android:textColor="@color/darkPurple"
                        android:textSize="35sp" />

                    <EditText
                        android:id="@+id/edittext_view_addnotes"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="16dp"
                        android:background="@drawable/et_layout"
                        android:gravity="start"
                        android:paddingLeft="16dp"
                        android:hint="Comment about this worker"

                        android:inputType="textMultiLine"
                        android:maxLines="50"
                        android:padding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/card_id" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/location"
                        android:textColor="@color/darkPurple"
                        android:fontFamily="@font/coolveticacompressedrg"
                        android:textSize="35sp" />

                    <EditText
                        android:id="@+id/edit_location"
                        android:layout_width="match_parent"
                        android:layout_height="53dp"
                       android:layout_margin="16dp"
                        android:background="@drawable/et_layout"
                        android:drawableRight="@drawable/location_img"
                        android:paddingLeft="16dp"
                       android:paddingRight="4dp"
                        android:hint="@string/your_location"
                        android:textColor="#78849E" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="15dp"
                        android:text="@string/phone"
                    android:fontFamily="@font/coolveticacompressedrg"
                        android:textColor="@color/darkPurple"
                        android:textSize="35sp"
                       />

                    <EditText
                        android:id="@+id/edit_phone_modified"
                        android:layout_width="match_parent"
                        android:layout_height="53dp"
                      android:layout_margin="16dp"
                        android:background="@drawable/et_layout"
                        android:paddingLeft="16dp"
                        android:hint="@string/your_phone"
                        android:paddingRight="4dp"
                        android:textColor="#78849E" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="15dp"
                       android:text="@string/another_phone"
                        android:fontFamily="@font/coolveticacompressedrg"
                        android:textColor="@color/darkPurple"
                        android:textSize="35sp"
                        />

                    <EditText
                        android:id="@+id/edit_another_phone_modified"
                        android:layout_width="match_parent"
                        android:layout_height="53dp"
                        android:layout_margin="16dp"
                        android:background="@drawable/et_layout"
                        android:paddingLeft="16dp"
                        android:hint="@string/your_phone"
                        android:paddingRight="4dp"
                        android:textColor="#78849E" />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView

                        android:id="@+id/time_picker"
                        android:layout_width="146dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:src="@drawable/timec" />

                    <ImageView
                        android:id="@+id/date_picker"
                        android:layout_width="146dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/date" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:id="@+id/edit_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="75dp"
                        android:layout_marginStart="75dp"
                        android:textColor="@color/colorPurple"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/edit_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="110dp"
                        android:layout_marginStart="110dp"
                        android:textColor="@color/colorPurple"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="40dp">

                    <TextView
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/coolveticacompressedrg"
                        android:textColor="@color/darkPurple"
                        android:text="@string/Payment"
                        android:textSize="35dp" />


                    <RadioGroup
                        android:id="@+id/radioOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/radio_edit_cash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="4dp"
                            android:buttonTint="@color/black"
                            android:checked="true"
                            android:text="@string/Cash" />


                        <RadioButton
                            android:id="@+id/radio_edit_pay_pal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="4dp"
                            android:buttonTint="@color/black"
                            android:text="@string/PayPal" />

                        <RadioButton
                            android:id="@+id/radio_edit_credit_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="4dp"
                            android:buttonTint="@color/black"
                            android:text="@string/Credit" />

                    </RadioGroup>
                </LinearLayout>

                <Button
                    android:id="@+id/edit_make_order"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/custom_button"
                    android:text="@string/Update"
                    android:textColor="@color/white"
                    android:fontFamily="@font/coolveticacompressedrg"
                    android:textSize="35sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>