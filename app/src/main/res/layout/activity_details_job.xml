<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bcmodified"

    tools:context=".Worker.DetailsJobPage.DetailsJobActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/coolveticacompressedrg"
        android:gravity="center"
        android:text="@string/Accept_details"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/linear_layout_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:weightSum="7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                  android:text="@string/typeOrder"
                    android:textColor="@color/colorPurple"
                    android:textSize="25dp"
                    android:fontFamily="@font/robotocndensed"
                    android:textStyle="bold|italic"/>

                <TextView
                    android:id="@+id/text_typeOfOrder_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"

                    android:hint="@string/Maintanance_repair"
                    android:textColor="@color/grey_font"
                    android:textColorHint="@color/grey_font"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                   android:text="@string/Details"
                    android:textColor="@color/colorPurple"
                    android:textSize="25dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/robotocndensed"
                    android:textStyle="bold|italic"/>

                <TextView
                    android:id="@+id/text_detailsOfJob_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/et_layout"
                    android:hint="@string/description"
                    android:padding="10dp"
                    android:textColor="@color/grey_font"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                 android:text="@string/location"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/colorPurple"
                    android:textSize="25dp"
                    android:fontFamily="@font/robotocndensed"
                    android:textStyle="bold|italic"/>

                <TextView
                    android:id="@+id/text_location_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"

                    android:background="@drawable/et_layout"
                    android:hint="@string/hint_location"
                    android:padding="10dp"
                    android:textColor="@color/grey_font"
                    android:textColorHint="@color/grey_font"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                   android:text="@string/phone"
                    android:textColor="@color/colorPurple"
                    android:textSize="25dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/robotocndensed"
                    android:textStyle="bold|italic"/>

                <TextView
                    android:id="@+id/text_phone_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"

                    android:layout_weight="1"
                    android:background="@drawable/et_layout"

                    android:hint="@string/phone_details"
                    android:padding="6dp"
                    android:textColor="@color/grey_font"
                    android:textColorHint="@color/grey_font"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/robotocndensed"

                        android:text="@string/Time"
                        android:textColor="@color/colorPurple"
                        android:textSize="25dp"
                        android:textStyle="bold|italic" />
                    <TextView
                        android:id="@+id/text_time_details"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/time_hint"
                        android:layout_margin="5dp"
                        android:background="@drawable/et_layout"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:paddingLeft="8dp"
                        android:textColorHint="@color/grey_font"
                        android:textColor="@color/grey_font"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:fontFamily="@font/robotocndensed"
                        android:text="@string/Date"
                        android:textColor="@color/colorPurple"
                        android:textSize="25dp"
                        android:textStyle="bold|italic" />
                    <TextView
                        android:id="@+id/text_date_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="12/12/2021"
                        android:layout_margin="5dp"
                        android:background="@drawable/et_layout"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="8dp"
                        android:textColorHint="@color/grey_font"
                        android:textColor="@color/grey_font"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/Payment"
                    android:textColor="@color/colorPurple"
                    android:textSize="25dp"
                    android:textStyle="bold|italic"/>

                <TextView
                    android:id="@+id/text_payment_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/et_layout"
                    android:hint="@string/payment_hint"
                    android:padding="5dp"
                    android:paddingLeft="8dp"
                    android:textColor="@color/grey_font"
                    android:textColorHint="@color/grey_font"
                    android:textSize="22dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_accept_details"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_check_type"
                android:text="@string/accept"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:textColor="@color/white"
                android:layout_marginBottom="30dp"
                android:textSize="19dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>