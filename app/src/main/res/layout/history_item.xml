<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true"
    android:textAlignment="center"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="3dp"
    app:cardMaxElevation="10dp"
    android:layout_gravity="center"
    android:elevation="10dp"
    app:cardCornerRadius="20dp"
    >

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/timec" />

        <TextView
            android:id="@+id/history_worker_clock"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="100dp"
            android:layout_marginEnd="140dp"
            android:text="1:34"
            android:fontFamily="@font/robotocndensed"
            android:textColor="@color/colorPurple"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginRight="2dp"
            android:layout_marginEnd="0dp"
            android:src="@drawable/date" />

        <TextView
            android:id="@+id/history_worker_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="31-12-2021"
            android:fontFamily="@font/robotocndensed"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/colorPurple"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/history_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/userName"
            android:textColor="@color/colorPurple"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/robotocndensed"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/history_user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phone"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:textColor="@color/colorPurple"
            android:fontFamily="@font/robotocndensed"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/history_user_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:textColor="@color/colorPurple"
            android:fontFamily="@font/robotocndensed"

            android:textSize="20sp" />

<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="@string/done_with_rating"-->
<!--            android:textSize="22sp"-->
<!--            android:layout_marginTop="16dp"-->
<!--            android:layout_marginLeft="4dp"-->
<!--            android:layout_marginStart="4dp"-->
<!--            android:fontFamily="@font/robotocndensed"-->
<!--            android:textColor="@color/colorPurple"/>-->


<!--        <RatingBar-->
<!--            android:id="@+id/ratingBar_history"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_gravity="right"-->
<!--            android:layout_marginStart="0dp"-->
<!--            android:layout_marginLeft="16dp"-->
<!--            android:layout_marginEnd="120dp"-->
<!--            android:layout_marginRight="20dp"-->
<!--            android:numStars="5" />-->

        <Button
            android:id="@+id/delete"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/custom_button"
            android:text="@string/Delete"
            android:textColor="@color/white" />


    </LinearLayout>



</androidx.cardview.widget.CardView>