<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true"
    android:textAlignment="center"

    app:cardElevation="3dp"
    app:cardMaxElevation="10dp"
    android:layout_gravity="center"
    android:elevation="10dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/timec" />

        <TextView
            android:id="@+id/history_worker_clock"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="155dp"
            android:layout_marginRight="100dp"
            android:fontFamily="@font/robotocndensed"
            android:text="1:34"
            android:textColor="@color/colorPurple"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/date" />

        <TextView
            android:id="@+id/history_worker_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/robotocndensed"
            android:text="31-12-2021"
            android:textColor="@color/colorPurple"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/history_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/robotocndensed"
            android:text="@string/emp_name"
            android:textColor="@color/colorPurple"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/job_title_of_worker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/robotocndensed"
            android:text="@string/Job"
            android:textColor="@color/colorPurple"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/history_kind_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/robotocndensed"
            android:text="@string/type_of_job"
            android:textColor="@color/colorPurple"
            android:textSize="22sp"
            android:textStyle="bold" />


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/ratebtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/star_btn" />

            <Button
                android:id="@+id/delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/delete_icon" />

        </GridLayout>


    </LinearLayout>



</androidx.cardview.widget.CardView>